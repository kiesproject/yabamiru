<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/taskListTopIten_abasaPercent_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/taskListTopIten_abasaPercent_textView"
            app:layout_constraintVertical_bias="0.493"
            app:srcCompat="@drawable/dokuro_black_alpha" />

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/now_yabasa"
            app:layout_constraintBottom_toBottomOf="@+id/taskListTopIten_abasaPercent_textView"
            app:layout_constraintEnd_toStartOf="@+id/taskListTopIten_abasaPercent_textView"
            app:layout_constraintTop_toTopOf="@+id/taskListTopIten_abasaPercent_textView"
            app:layout_constraintVertical_bias="0.75" />

    <TextView
            android:id="@+id/taskListTopIten_abasaPercent_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/alfa_slab_one"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="96%" />
</android.support.constraint.ConstraintLayout>